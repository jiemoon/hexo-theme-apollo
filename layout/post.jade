extends partial/layout

block site_title
    != page.title + " · " + config.title

block description
    - desc = page.desc || page.title + ' - ' + config.author;
    meta(name="description", content=desc)

block container
    include mixins/post
    +post(page)
    if page.toc !== false
      div#toc.toc-article
        div.toc-title 目录
        != toc(page.content)

block pagination
    include mixins/paginator
    +post()
    include partial/comment

block copyright
    include partial/copyright